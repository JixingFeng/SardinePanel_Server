<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mysecurity.dao.SardlineMenuDao">

    <resultMap id="BaseResultMap" type="com.example.mysecurity.entity.SardlineMenu">
        <!--@Table sardline_menu-->
        <result property="menuId" column="menu_id" jdbcType="VARCHAR"/>
        <result property="menuName" column="menu_name" jdbcType="VARCHAR"/>
        <result property="menuPath" column="menu_path" jdbcType="VARCHAR"/>
        <result property="pid" column="pid" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          menu_id, menu_name, menu_path, pid, sort, description
        from sardline.sardline_menu
        where menu_id = #{menuId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          menu_id, menu_name, menu_path, pid, sort, description
        from sardline.sardline_menu
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          menu_id, menu_name, menu_path, pid, sort, description
        from sardline.sardline_menu
        <where>
            <if test="menuId != null and menuId != ''">
                and menu_id = #{menuId}
            </if>
            <if test="menuName != null and menuName != ''">
                and menu_name = #{menuName}
            </if>
            <if test="menuPath != null and menuPath != ''">
                and menu_path = #{menuPath}
            </if>
            <if test="pid != null and pid != ''">
                and pid = #{pid}
            </if>
            <if test="sort != null and sort != ''">
                and sort = #{sort}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="menuId" useGeneratedKeys="true">
        insert into sardline.sardline_menu(menu_name, menu_path, pid, sort, description)
        values (#{menuName}, #{menuPath}, #{pid}, #{sort}, #{description})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sardline.sardline_menu
        <set>
            <if test="menuName != null and menuName != ''">
                menu_name = #{menuName},
            </if>
            <if test="menuPath != null and menuPath != ''">
                menu_path = #{menuPath},
            </if>
            <if test="pid != null and pid != ''">
                pid = #{pid},
            </if>
            <if test="sort != null and sort != ''">
                sort = #{sort},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
        </set>
        where menu_id = #{menuId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sardline.sardline_menu where menu_id = #{menuId}
    </delete>

</mapper>